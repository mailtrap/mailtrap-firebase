{
  "name": "mailtrap-firebase-extension",
  "version": "0.1.0",
  "description": "Firebase Extension to send emails via Mailtrap API",
  "main": "lib/index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:coverage": "jest --testPathIgnorePatterns=integration --coverage",
    "test:watch": "jest --watch --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest",
    "precommit": "npm run lint && npm run format:check && npm run typecheck"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "mailtrap": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "firebase-functions-test": "^3.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "license": "Apache-2.0",
  "private": true
}
